doctype
html
    head
        title #{title} - #{vm.title}
        link(href='/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    body
        nav.navbar.navbar-default
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='navbar-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/deploys/' + vm.app.id)= vm.app.title
            .collapse.navbar-collapse#navbar-collapse
                ul.nav.navbar-nav
                    each navLink in navLinks
                        li.dropdown
                            if navLink.type === 'link'
                                a(href='/deploys/' + vm.app.id + '/' + navLink.linkTarget.type + '/' + navLink.linkTarget.id)= navLink.text
                            else if navLink.type === 'dropdown'
                                a.dropdown-toggle(href="#", data-toggle="dropdown")
                                    | #{navLink.text}
                                    b.caret
                                ul.dropdown-menu
                                    each childLink in navLink.children
                                        li
                                            a(href='/deploys/' + vm.app.id + '/' + childLink.linkTarget.type + '/' + childLink.linkTarget.id)= childLink.text

        .container
            block content

    script(src='/js/jquery-2.0.3.min.js', type='application/javascript')
    script(src='/js/bootstrap.min.js', type='application/javascript')