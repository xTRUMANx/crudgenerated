extends layout

block content

    h2 Login

    form.form-horizontal(action='/login', method='post')
        .form-group
            label.col-sm-3.control-label(for='id') Username
            .col-sm-9
                input.form-control(type='text', name='id')
        .form-group
            label.col-sm-3.control-label(for='password') Password
            .col-sm-9
                input.form-control(type='password', name='password')
        .form-group
            .col-sm-9.col-sm-offset-3
                input.btn.btn-primary(type='submit', value='Login')